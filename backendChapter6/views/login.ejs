<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
      <h3 class="text-3xl mb-3">Login User Account</h3>
      <form method="post" action="/login">
        <input class="px-2 py-2 rounded-md bg-transparent border-2 border-zinc-800" type="email" name="email" placeholder="email">
        <input class="px-2 py-2 rounded-md bg-transparent border-2 border-zinc-800"  type="password" name="password" placeholder="password">
        <input class="px-5 py-2 rounded-md bg-blue-500" type="submit" value="Login">
      </form> 
    </div>
  </body>
</html>
